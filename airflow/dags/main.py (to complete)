from datetime import datetime, timedelta
from airflow import DAG
from airflow.operators.trigger_dagrun import TriggerDagRunOperator

default_args = {
    'owner': 'airflow',
    'depends_on_past': False,
    'email_on_failure': False,
    'email_on_retry': False,
    'retries': 1,
    'retry_delay': timedelta(minutes=5),
}

with DAG(
    'main_dag',
    default_args=default_args,
    description='Master orchestrator DAG for staging, dimensions, and facts',
    schedule_interval='*/10 * * * *',  # you control the pipeline frequency here
    start_date=datetime(2025, 9, 16),
    catchup=False,
    tags=['orchestrator', 'dwh'],
) as dag:

    # Stage loader
    stg_loader = TriggerDagRunOperator(
        task_id="run_stg_loader",
        trigger_dag_id="stg_loader",
        wait_for_completion=True
    )

    # Dimension partner
    dim_partner = TriggerDagRunOperator(
        task_id="run_dim_partner",
        trigger_dag_id="dim_partner",
        wait_for_completion=True
    )

    # Dimension sales order
    dim_sales_order = TriggerDagRunOperator(
        task_id="run_dim_sales_order",
        trigger_dag_id="dim_sales_order",
        wait_for_completion=True
    )

    # Dimension purchase order
    dim_purchase_order = TriggerDagRunOperator(
        task_id="run_dim_purchase_order",
        trigger_dag_id="dim_purchase_order",
        wait_for_completion=True
    )

    # Customer depends on partner + sales_order
    dim_customer = TriggerDagRunOperator(
        task_id="run_dim_customer",
        trigger_dag_id="dim_customer",
        wait_for_completion=True
    )

    # Supplier depends on partner + purchase_order
    dim_supplier = TriggerDagRunOperator(
        task_id="run_dim_supplier",
        trigger_dag_id="dim_supplier",
        wait_for_completion=True
    )

    # Example: later facts
    fact_sales = TriggerDagRunOperator(
        task_id="run_fact_sales",
        trigger_dag_id="fact_sales",
        wait_for_completion=True
    )

    # Ordering
    stg_loader >> [dim_partner, dim_sales_order, dim_purchase_order, etc... kammel houni les dim lkol]
    dim_partner >> dim_customer
    dim_sales_order >> dim_customer
    dim_partner >> dim_supplier
    dim_purchase_order >> dim_supplier
    #etc
    #etc
    #etc

    [dim_customer, dim_supplier] >> fact_sales
    #etc >> fact_purchases
